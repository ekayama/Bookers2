


<div class="container ">
 <div class="row">
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

 <div id="error">
 <% if @book.errors.any? %>
 <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>

  <h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
    <div class="col text-md">
        <label for="inputTitle">Title</label>
        <div class="border">
           <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control", style: "width: 100%;"%>
         </div>
         <label for="inputBody">opinion</label>
         <div class="border">
           <%= f.text_area :body, id: "inputBody", class: "form-control", style: "width: 100%;"%>
         </div>
      </div>
       <%= f.submit 'Update Book', class: "border rounded bg-success text-white mt-2 py-1 ml-3" %>
    <% end %>
    
    <%= link_to "Show", book_path %>
    <span>|</span>
    <%= link_to "Back", books_path %>
 </div>
</div>

