<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  <label for="inputBody">opinion</label>
  <%= f.text_area :body, id: "inputBody", rows: 3, cols: 20 %>
  <%= f.submit "変更を保存" %>
<% end %>

<%= link_to "Show", books_path %>
<%= link_to "Back", book_path(@book) %>

