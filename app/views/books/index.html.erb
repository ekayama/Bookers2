<h1>User info</h1>

<div class="profile-container">
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h5 class="profile-name"><%= @user.name %></h5>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <p>Title:<%= book.title %></p>
    <p>Opinion:<%= book.opinino %></p>
    <%= link_to "削除", book_path(book), method: :delete %>
    <%= link_to "show", book_path(book) %>
  </div>


<% end %>